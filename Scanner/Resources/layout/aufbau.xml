<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:gravity="center_horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="40px"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:text="@string/kommisionieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_kommisionieren" />
            <Button
                android:text="@string/aktivieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_aktivieren" />
            <Button
                android:text="@string/buchen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_buchen" />
        </LinearLayout>
        <LinearLayout
            android:layout_margin="40px"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">
            <Button
                android:text="@string/deaktivieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_deaktivieren" />
            <Button
                android:text="@string/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_info" />
            <Button
                android:text="@string/dokumentieren"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="80px"
                android:id="@+id/button_aufbau_dokumentieren" />
        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_slider"/>
</RelativeLayout>