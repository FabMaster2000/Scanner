<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
            <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal">
        <LinearLayout
            android:layout_marginTop="100px"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center">

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/buchen"
                android:layout_margin="25px"
                android:id="@+id/button_buchen"/>
            <Button
                android:text="@string/info"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="25px"
                android:id="@+id/button_info" />
        </LinearLayout>
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="25px"
        android:orientation="horizontal"
        android:gravity="center">
        <Button
            android:text="@string/etikett_drucken"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="25px"
            android:id="@+id/button_etikett_drucken" />
        <Button
            android:text="@string/dokumentieren"
            android:layout_width="wrap_content"
            android:layout_margin="25px"
            android:layout_height="wrap_content"
            android:id="@+id/button_dokumentieren" />

        </LinearLayout>
    </LinearLayout>
    <include layout="@layout/layout_slider"/>
</RelativeLayout>