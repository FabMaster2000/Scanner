<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <SlidingDrawer
        android:content="@+id/content"
        android:handle="@+id/handle"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/slidingDrawer1"
        >
        <Button
            android:id="@+id/handle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/auswahl"/>
        <LinearLayout
            android:id="@+id/content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:background="@android:color/white">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">
                <Button
                    android:text="@string/pruefteil"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:onClick="prüfteil_click"
                    android:layout_margin="25px"
                    android:id="@+id/button_pruefteil" 
                />
                <Button
                    android:text="@string/aufbau"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:onClick="aufbau_click"
                    android:layout_margin="25px"
                    android:id="@+id/button_aufbau" 
                />
            </LinearLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <Button
                    android:text="@string/lagerplatz"
                    android:layout_width="250px"
                    android:layout_height="wrap_content"
                    android:layout_margin="25px"
                    android:onClick="lagerplatz_click"
                    android:id="@+id/button_lagerplatz" 
                />
            </LinearLayout>
        </LinearLayout>
    </SlidingDrawer>
</RelativeLayout>